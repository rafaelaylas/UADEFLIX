<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">

    <TextView
        android:id="@+id/lviewCatalog_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="List Title"
        android:textColor="@color/text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lviewCatalog_clay_catalogContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lviewCatalog_clay_catalogContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lviewCatalog_txt_title">

        <ImageView
            android:id="@+id/lviewCatalog_btn_navLeft"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:tint="@color/text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_navigate_before"
            tools:ignore="SpeakableTextPresentCheck" />

        <ScrollView
            android:id="@+id/lviewCatalog_sview_movies"
            android:layout_width="300dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lviewCatalog_btn_navLeft"
            app:layout_constraintEnd_toStartOf="@+id/lviewCatalog_btn_navRight"
            app:layout_constraintTop_toTopOf="parent">


            <ListView
                android:id="@+id/lviewCatalog_lview_movies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </ScrollView>

        <ImageView
            android:id="@+id/lviewCatalog_btn_navRight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:tint="@color/text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_navigate_next"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>